@model IEnumerable<Tbproject>

@{
    ViewData["Title"] = "DuAn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>DuAn</h2>

<p>
    <a asp-action="DuAnAdd">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                Hiển thị trang chủ
            </th>
            <th>
                Hình ảnh
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectHidden)
            </td>
            <td>
                <img src="@item.ProjectLink" style="width:100px" />
            </td>
            <td>
                <a asp-action="DuAnEdit" asp-route-id="@item.ProjectId">Edit</a> |
                <a asp-action="DuAnDelete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
